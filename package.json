{
  "name": "gemini-history-manager",
  "version": "0.18.0",
  "description": "Track and manage your Google Gemini chat history with advanced visualization and organization tools.",
  "type": "module",
  "scripts": {
    "build": "pnpm run build:firefox",
    "build:firefox": "TARGET_BROWSER=firefox vite build --outDir dist-firefox",
    "build:chrome": "TARGET_BROWSER=chrome vite build --outDir dist-chrome",
    "build:all": "pnpm run build:firefox && pnpm run build:chrome",
    "dev": "TARGET_BROWSER=firefox vite build --watch --outDir dist-firefox && web-ext run --firefox-profile=development --source-dir ./dist-firefox/",
    "dev:chrome": "TARGET_BROWSER=chrome vite build --watch --outDir dist-chrome",
    "preview": "vite preview",
    "lint": "web-ext lint --source-dir ./dist-firefox/",
    "lint:chrome": "web-ext lint --source-dir ./dist-chrome/",
    "package": "pnpm run build:all && pnpm run package:firefox && pnpm run package:chrome",
    "package:firefox": "web-ext build --config ./web-ext-config-firefox.cjs",
    "package:chrome": "web-ext build --config ./web-ext-config-chrome.cjs",
    "record-build": "node scripts/record-build.js",
    "package-record": "pnpm run package && pnpm run record-build",
    "compare-checksums": "node scripts/compare-checksums-wrapper.js",
    "format": "pretty-quick --staged",
    "format:check": "pretty-quick --check --staged",
    "format:all": "prettier --write \"**/*.{js,vue,json,css,md,html}\"",
    "format:check:all": "prettier --check \"**/*.{js,vue,json,css,md,html}\"",
    "bump": "node scripts/bump-version.js"
  },
  "keywords": [
    "gemini",
    "history",
    "browser-extension",
    "firefox-addon",
    "chrome-extension",
    "vue"
  ],
  "author": "InvictusNavarchus",
  "license": "GPL-3.0",
  "private": true,
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.5",
    "fs-extra": "^11.1.0",
    "glob": "^11.0.2",
    "prettier": "^3.5.3",
    "pretty-quick": "^4.1.1",
    "vite": "^6.3.5",
    "web-ext": "^7.6.2"
  },
  "dependencies": {
    "chart.js": "^4.4.0",
    "dayjs": "^1.11.10",
    "minisearch": "^7.1.2",
    "vue": "^3.4.27",
    "webextension-polyfill": "^0.12.0"
  }
}
