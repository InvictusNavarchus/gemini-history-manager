{
  "name": "gemini-history-manager",
  "version": "0.9.0",
  "description": "Track and manage your Google Gemini chat history with advanced visualization and organization tools.",
  "type": "module",
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch && web-ext run --firefox-profile=development --source-dir ./dist/",
    "preview": "vite preview",
    "lint": "web-ext lint --source-dir ./dist/",
    "package": "vite build && web-ext build --source-dir ./dist/ --overwrite-dest"
  },
  "keywords": [
    "gemini",
    "history",
    "browser-extension",
    "firefox-addon"
  ],
  "author": "InvictusNavarchus",
  "license": "GPL-3.0",
  "private": true,
  "devDependencies": {
    "fs-extra": "^11.1.0",
    "glob": "^11.0.2",
    "vite": "^6.3.5",
    "web-ext": "^7.6.2"
  },
  "dependencies": {
    "chart.js": "^4.4.0",
    "dayjs": "^1.11.10"
  }
}
