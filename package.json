{
  "name": "gemini-history-manager",
  "version": "0.13.0",
  "description": "Track and manage your Google Gemini chat history with advanced visualization and organization tools.",
  "type": "module",
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch && web-ext run --firefox-profile=development --source-dir ./dist/",
    "preview": "vite preview",
    "lint": "web-ext lint --source-dir ./dist/",
    "package": "vite build && web-ext build --config ./web-ext-config.cjs",
    "format": "prettier --write \"**/*.{js,vue,json,css,md,html}\"",
    "format:check": "prettier --check \"**/*.{js,vue,json,css,md,html}\""
  },
  "keywords": [
    "gemini",
    "history",
    "browser-extension",
    "firefox-addon",
    "vue"
  ],
  "author": "InvictusNavarchus",
  "license": "GPL-3.0",
  "private": true,
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.5",
    "fs-extra": "^11.1.0",
    "glob": "^11.0.2",
    "prettier": "^3.5.3",
    "vite": "^6.3.5",
    "web-ext": "^7.6.2"
  },
  "dependencies": {
    "chart.js": "^4.4.0",
    "dayjs": "^1.11.10",
    "vue": "^3.4.27"
  }
}
